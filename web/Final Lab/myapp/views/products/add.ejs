<h1><%=title%></h1>
<div class="container">
   
    <form action="/products/add", method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Book Title</label>
        <input type="text" class="form-control" id="name" placeholder="Enter Book title" name="name">
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="number" class="form-control" id="price" placeholder="Enter Book price" name="price">
      </div>
      <div class="form-group">
        <label for="about">About Book</label>
        <textarea class="form-control" id="about" rows="3" placeholder="About book" name="about"></textarea>
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        <input type="file" class="form-control" id="image" name="image" />
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>