<div style=" margin-top:50px; margin-left:auto; margin-right:auto; text-align: center; border:2px solid black; border-radius: 10px; height: 500px;width: 500px; align-items: center;">
    <h1 style="font-size: xx-large; margin-top: 50px;">Login</h1>
    <form action="/login" method="post" style="margin-top: 2rem;">
        <div style="margin-bottom: 1rem;">
            <label for="email" style="display: block; font-weight: bold;font-size: larger; margin-bottom: 10px;">Email</label>
            <input type="text" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Enter Email"
                style="width: 50%; padding: 0.5rem;">
        </div>
        <div style="margin-bottom: 1rem;">
            <label for="password" style="display: block; font-weight: bold; font-size: larger; margin-bottom: 10px;">Password</label>
            <input type="password" class="form-control" name="password" placeholder="Enter Password"
                style="width: 50%; padding: 0.5rem;">
        </div>
        <button type="submit" class="btn btn-add"
            style="background-color: #007bff; color: white; padding: 0.5rem 1rem; border: none; cursor: pointer;">Login</button>
    </form>
</div>
